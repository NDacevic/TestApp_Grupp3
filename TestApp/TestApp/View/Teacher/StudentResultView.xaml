<Page
    x:Class="TestApp.View.Teacher.StudentResultView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TestApp.View.Teacher"
    xmlns:model="using:TestApp.ViewModel"
    xmlns:data="using:TestApp.Model"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <ListView 
            x:Name="AllTests_ListView"
            ItemsSource="{x:Bind model:TeacherStudentViewModel.Instance.AllTests}"
            x:DefaultBindMode="TwoWay"
            Grid.Column="0" 
            Grid.Row="1"
            BorderBrush="Black"
            BorderThickness="2">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="TestId"/>
                        <TextBlock Text="CourseName"/>
                        <TextBlock Text="Grade"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
            
        </ListView>
        <ListView 
            x:Name="IndividualTestResult_ListView"
            ItemsSource="{x:Bind model:TeacherStudentViewModel.Instance.StudentTestResults}"
            x:DefaultBindMode="TwoWay"
            Grid.Column="2" 
            Grid.Row="1"
            BorderBrush="Black"
            BorderThickness="2">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="Student name"/>
                        <TextBlock Text="Student test score"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>

        </ListView>
        <Button 
            x:Name="Bttn_SeeStudentResult" 
            Content="See student result"
            Grid.Row="3"/>
    </Grid>
</Page>
