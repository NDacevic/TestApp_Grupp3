<Page
    x:Class="TestApp.View.Teacher.StudentResultView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TestApp.View.Teacher"
    xmlns:model="using:TestApp.ViewModel"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:TestApp.Model"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal" 
                        Spacing="30"
                        VerticalAlignment="Bottom"
                        >
                
            <TextBlock  Text="TestId"
                        Margin="10,0,0,0"/>
            <TextBlock  Text="Ämne"
                        Margin="40,0,0,0"/>
            <TextBlock  Text="Årskurs"
                        Margin="40,0,0,0"/>
            <TextBlock  Text="Maxpoäng"
                        Margin="40,0,0,0"/>
        </StackPanel>
        <ListView 
            x:Name="Lv_AllTests"
            ItemsSource="{x:Bind model:TeacherStudentViewModel.Instance.GradedTests}"
            Grid.Column="0" 
            Grid.Row="1"
            BorderBrush="Black"
            BorderThickness="2">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Spacing="20"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="data:Test">
                    <StackPanel Orientation="Horizontal" Spacing="60">
                        <TextBlock Text="{x:Bind TestId}"/>
                        <TextBlock Text="{x:Bind CourseName}" />
                        <TextBlock Text="{x:Bind Grade}" />
                        <TextBlock Text="{x:Bind MaxPoints}" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
           
                
           
        </ListView>
        <ListView 
            x:Name="Lv_IndividualTestResult"
            ItemsSource="{x:Bind model:TeacherStudentViewModel.Instance.DisplayResult}"
            Grid.Column="2" 
            Grid.Row="1"
            BorderBrush="Black"
            BorderThickness="2">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="x:String">
                    <StackPanel Orientation="Horizontal" Spacing="30">
                        <TextBlock Text="{x:Bind }"/>
                        
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        
        <StackPanel    Orientation="Horizontal" 
                       Spacing="30"
                       Grid.Column="2"
                       VerticalAlignment="Bottom"
                              >
            <TextBlock Text="TestId"
                       Margin="10,0,0,0"/>
            <TextBlock Text="Namn"
                       Margin="40,0,0,0"/>
            <TextBlock Text="Poäng"
                       Margin="40,0,0,0"/>
        </StackPanel>
        <Button 
            x:Name="Bttn_SeeStudentResult" 
            Content="Se elever"
            Grid.Row="3"
            Click="Bttn_SeeStudentResult_Click"/>
    </Grid>
</Page>
