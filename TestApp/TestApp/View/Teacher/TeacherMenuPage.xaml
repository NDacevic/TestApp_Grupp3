<Page
    x:Class="TestApp.View.Teacher.TeacherMenuPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TestApp.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Silver">

    <Grid>
        <TextBlock Text=""
                   x:Name="displayName"
                   Margin="20,100,0,0"/>
        <StackPanel Orientation="Vertical"
                    VerticalAlignment="Center">
        
            <Button Content="Skapa fråga"
                    x:Name="createQuestion_btn"
                    Click="TeacherNavigate_btn"
                    Margin="0,0,0,10"/>

            <Button Content="Skapa prov"
                    x:Name="createTest_btn"
                    Click="TeacherNavigate_btn"
                    Margin="0,0,0,10"/>
            
            <Button Content="Rätta prov"
                    x:Name="gradeTest_btn"
                    Click="TeacherNavigate_btn"
                    Margin="0,0,0,10"/>
            
            <Button Content="Se provresultat"
                    x:Name="studentResult_btn"
                    Click="TeacherNavigate_btn"
                    Margin="0,0,0,10"/>


            <Button Content="Logga ut"
                    x:Name="logOut_btn"
                    Click="TeacherNavigate_btn"/>

        </StackPanel>

    </Grid>
</Page>
