<Page
    x:Class="TestApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TestApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    MaxWidth="1920"
    MaxHeight="1080">

    <SplitView
        DisplayMode="CompactOverlay"
        CompactPaneLength="300">
        <SplitView.Pane>
            <StackPanel
                Spacing="20">
                <TextBlock
                    Text="Navigate to Page"/>
                <Button
                    x:Name="bttn_AvailableTestsViewNavigate"
                    Content="AvailableTestsView"
                    Click="Button_NavigateToPage"
                    />
                <Button
                    x:Name="bttn_HistoricalTestsViewNavigate"
                    Content="HistoricalTestsView"
                    Click="Button_NavigateToPage"
                    />
                <Button
                    x:Name="bttn_MainPageStudentViewNavigate"
                    Content="MainPageStudentView"
                    Click="Button_NavigateToPage"
                    />
                <Button
                    x:Name="bttn_WriteTestViewNavigate"
                    Content="WriteTestView"
                    Click="Button_NavigateToPage"
                    />
                <Button
                    x:Name="bttn_CreateQuestionViewNavigate"
                    Content="CreateQuestionView"
                    Click="Button_NavigateToPage"
                    />
                <Button
                    x:Name="bttn_CreateTestViewNavigate"
                    Content="CreateTestView"
                    Click="Button_NavigateToPage"
                    />
                <Button
                    x:Name="bttn_GradeTestViewNavigate"
                    Content="GradeTestView"
                    Click="Button_NavigateToPage"
                    />
                <Button
                    x:Name="bttn_MainPageTeacherViewNavigate"
                    Content="MainPageTeacherView"
                    Click="Button_NavigateToPage"
                    />
                <Button
                    x:Name="bttn_StudentResultViewNavigate"
                    Content="StudentResultView"
                    Click="Button_NavigateToPage"
                    />
                <Button
                    x:Name="bttn_LogInViewNavigate"
                    Content="LogInView"
                    Click="Button_NavigateToPage"
                    />
                <Button
                    x:Name="bttn_deleteTestView"
                    Content="DeleteTestView"
                    Click="Button_NavigateToPage"
                    />
            </StackPanel>
        </SplitView.Pane>
        <SplitView.Content>
            <Frame x:Name="mainFrame"/>
        </SplitView.Content>
    </SplitView>
</Page>
